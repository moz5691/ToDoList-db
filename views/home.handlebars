<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>rendering page</title>

</head>

<div class="container">
  <!-- Content here -->

  <h1 class="text-center mt-1 p-4 bg-primary text-white">Chan's To Do List</h1>
  <hr />

  <div class="card card-body mb-2 bg-light">

    <form action="/api" method="post">
      <div class="input-group m-4">
        <input type="text" class="form-control" name="text">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="far fa-edit"></i></button>
        </span>
      </div>
    </form>

    <hr />
    <ul class="list-group todo-list-group">
      {{#each toDos}}
      <li class="list-group-item m-2 ml-4 mr-4 p-2 bg-light text-dark">
        <div class="form-check">
          <input type="checkbox" data-id="{{this._id}}" class=" form-check-input" id="completed-cbx"
            {{#if this.completed}} checked{{/if}}> <label class="form-check-label" for="exampleCheck1">{{ this.text }}</label><span
            style="float:right"><button class="btn-danger" id="delete-btn" data-id="{{this._id}}">X</button></span>
        </div>
      </li>
      {{/ each}}
    </ul>
  </div>
</div>